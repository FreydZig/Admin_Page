@model Worker

<form method="post" asp-action="Edit">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Worker</h2>
			<hr />
		</div>
		@*<div asp-validation-summary="All"></div>*@
		<div class="mb-3">
			<label asp-for="Name"></label>
			<div>
				<input asp-for="Name" class="from-control"/>
			</div>
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label>Last name</label>
			<div>
				<input asp-for="Last_name" class="from-control"/>
			</div>
			<span asp-validation-for="Last_name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label>Father name</label>
			<div>
				<input asp-for="Father_name" class="from-control"/>
			</div>
			<span asp-validation-for="Father_name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label>Email</label>
			<div>
				<input asp-for="Email" class="from-control"/>
			</div>
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-outline-info" style="width:150px">Update</button>
		<a asp-controller="Worker" asp-action="Index" class="btn btn-outline-warning" style="width:150px">
			Back
		</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial"/>
	}
}