@model IEnumerable<WorkerProject>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Workers List @ViewData["name"]</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Project" asp-action="AddWorker" asp-route-name="@ViewData["name"]" class="btn btn-outline-success">
                Create new Worker
            </a>
        </div>
    </div>
<br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Project Name
            </th>
            <th>
                Worker Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="25%">
                    @obj.Name_project
                </td>
                <td width="25%">
                    @obj.Name_worker
                </td>
                 <td>
                    <div class="bg-opacity-75 " role="group">                       
                        <a asp-controller="Project" asp-action="DeleteWorker" asp-route-id="@obj.Id"
                        class="btn btn-outline-danger mx-2">
                        Delete
                        </a>
                    </div>
                </td> 
            </tr>
        }
        
    </tbody>
    
</table>
<a asp-controller="Project" asp-action="Index" class="btn btn-outline-warning" style="width:150px">
			Back
		</a>
</div>
