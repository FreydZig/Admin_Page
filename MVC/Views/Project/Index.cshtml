<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Project Name
            </th>
            <th>
                Company Customer 
            </th>
            <th>
                Company Executor 
            </th>
            <th>
                Project Director
            </th>
            <th>
                Date Start
            </th>
            <th>
                Date End
            </th>
            <th>
                Priority
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="20%">
                    @obj.Name
                </td>
                <td width="10%">
                    @obj.Name_company_cust
                </td>
                <td width="10%">
                    @obj.Name_company_exe
                </td>
                <td width="10%">
                    @obj.Name_director
                </td>
                 <td width="20%">
                    @obj.Date_start
                </td>
                <td width="20%">
                    @obj.Date_end
                </td>
                <td width="10%">
                    @obj.Priority
                </td>
                <td>
                    <div class="bg-opacity-75 " role="group">
                        <div>
                            <a asp-controller="Project" asp-action="Edit" asp-route-id="@obj.Id"
                            class="btn btn-outline-info mx-2">
                            Edit
                            </a>
                        </div>
                    </div>
                </td>
                <td>
                    <div class="bg-opacity-75 " role="group">                       
                        <a asp-controller="Project" asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-outline-danger mx-2">
                        Delete
                        </a>
                    </div>
                </td>  
                <td>
                    <div class="bg-opacity-75 " role="group">                       
                        <a asp-controller="Project" asp-action="ViewWorkers" asp-route-name="@obj.Name"
                        class="btn btn-outline-success mx-2">
                        Workers
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
