@model WorkerProject

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Add Worker</h2>
			<hr />
		</div>
		@*<div asp-validation-summary="All"></div>*@
		<div class="mb-3">
			<div>
				<input asp-for="Name_project" hidden class="from-control" value="@ViewData["name"]"/>
			</div>
		</div>
		<div class="mb-3">
			<label>Worker</label>
			<select class="form-select" asp-for="Name_worker" class="from-control">
				@foreach(var obj in ViewBag.Worker)
				{
					<option >@obj.Name</option>
				}
			</select>
		</div>
		<button type="submit" class="btn btn-outline-success" asp-route-name="@ViewData["name"]" style="width:150px">Add</button>
		<a asp-controller="Project" asp-action="ViewWorkers" asp-route-name="@ViewData["name"]" class="btn btn-outline-warning" style="width:150px">
			Back
		</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial"/>
	}
}
